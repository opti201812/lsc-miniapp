.container {
   padding: 20rpx;
   background-color: #f5f5f5;
}

.highlights-list {
   width: 100%;
}

.highlight-item {
   background: #fff;
   border-radius: 12rpx;
   margin-bottom: 20rpx;
   overflow: hidden;
   box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.highlight-image {
   width: 100%;
   height: 360rpx;
}

.highlight-info {
   padding: 20rpx;
}

.highlight-title {
   font-size: 32rpx;
   font-weight: 500;
   color: #333;
   margin-bottom: 10rpx;
}

.highlight-desc {
   font-size: 28rpx;
   color: #666;
   margin-bottom: 16rpx;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 2;
   overflow: hidden;
}

.highlight-meta {
   display: flex;
   justify-content: space-between;
   font-size: 24rpx;
   color: #999;
}

.highlight-date {
   color: #999;
}

.highlight-views {
   color: #999;
}

.container {
   padding: 20rpx;
   background-color: #f5f5f5;
}

.tournament-list {
   width: 100%;
}

.tournament-item {
   background: #fff;
   border-radius: 12rpx;
   margin-bottom: 20rpx;
   padding: 20rpx;
   box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.tournament-status {
   font-size: 24rpx;
   color: #999;
   margin-bottom: 10rpx;
}

.tournament-content {
   display: flex;
   align-items: center;
}

.tournament-icon {
   width: 120rpx;
   height: 120rpx;
   border-radius: 8rpx;
   margin-right: 20rpx;
}

.tournament-info {
   flex: 1;
}

.tournament-name {
   font-size: 32rpx;
   font-weight: 500;
   color: #333;
   margin-bottom: 8rpx;
}

.tournament-organizer {
   font-size: 28rpx;
   color: #666;
   margin-bottom: 6rpx;
}

.tournament-date {
   font-size: 24rpx;
   color: #999;
}

.container {
   padding: 0;
   background-color: #f5f5f5;
}

/* 搜索框样式 */
.search-box {
   position: relative;
   padding: 16rpx 30rpx;
   background-color: #fff;
}

.search-box input {
   height: 72rpx;
   padding: 0 60rpx;
   background-color: #f5f5f5;
   border-radius: 36rpx;
   font-size: 28rpx;
}

.search-box icon {
   position: absolute;
   left: 50rpx;
   top: 50%;
   transform: translateY(-50%);
}

.search-placeholder {
   color: #999;
}

/* 轮播图样式 */
.banner {
   width: 100%;
   height: 320rpx;
   margin-bottom: 0;
   border-radius: 12rpx;
   overflow: hidden;
}

.banner-image {
   width: 100%;
   height: 100%;
}

/* 跑马灯样式 */
.notice-bar {
   display: flex;
   align-items: center;
   background: #fff;
   padding: 16rpx 30rpx;
   margin-bottom: 20rpx;
}

.notice-icon {
   font-size: 32rpx;
   margin-right: 16rpx;
   color: #ff4d4f;
}

.notice-swiper {
   flex: 1;
   height: 40rpx;
}

.notice-item {
   font-size: 28rpx;
   color: #666;
   line-height: 40rpx;
   white-space: nowrap;
   overflow: hidden;
   text-overflow: ellipsis;
}

/* 焦点赛事列表样式 */
.tournament-list {
   padding: 20rpx 30rpx;
   background-color: #fff;
}

.section-title {
   font-size: 32rpx;
   font-weight: bold;
   margin-bottom: 20rpx;
   color: #333;
}

.tournament-item {
   margin-bottom: 30rpx;
   background-color: #fff;
   border-radius: 12rpx;
   box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
   overflow: hidden;
}

.tournament-status {
   padding: 8rpx 20rpx;
   font-size: 24rpx;
   color: #fff;
}

.status-ongoing {
   background-color: #1890ff;
}

.status-upcoming {
   background-color: #52c41a;
}

.tournament-content {
   padding: 20rpx;
   display: flex;
   align-items: center;
}

.tournament-icon {
   width: 100rpx;
   height: 100rpx;
   margin-right: 20rpx;
   border-radius: 8rpx;
}

.tournament-info {
   flex: 1;
}

.tournament-name {
   font-size: 30rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 8rpx;
}

.tournament-organizer {
   font-size: 26rpx;
   color: #666;
   margin-bottom: 8rpx;
}

.tournament-prize {
   font-size: 26rpx;
   color: #666;
}

.prize-amount {
   color: #f5222d;
   font-weight: bold;
}

.quick-menu {
   margin: 20rpx 0;
   background: #fff;
   border-radius: 12rpx;
}

.section {
   margin-top: 20rpx;
}

.section-divider {
   height: 80rpx;
   background-color: #f5f5f5;
   margin: 30rpx 0;
   position: relative;
   display: flex;
   align-items: center;
   justify-content: center;
}

.section-divider::before,
.section-divider::after {
   content: "";
   position: absolute;
   height: 1rpx;
   background-color: #ddd;
   width: 30%;
}

.section-divider::before {
   left: 40rpx;
}

.section-divider::after {
   right: 40rpx;
}

.divider-text {
   font-size: 28rpx;
   color: #666;
   padding: 0 30rpx;
   background: #f5f5f5;
   z-index: 1;
}

.event-item {
   display: flex;
   align-items: center;
   padding: 20rpx 0;
}

.event-icon {
   width: 120rpx;
   height: 120rpx;
   border-radius: 8rpx;
   margin-right: 20rpx;
}

.event-info {
   flex: 1;
}

.event-name {
   font-size: 32rpx;
   font-weight: 500;
   color: var(--text-color);
   margin-bottom: 8rpx;
}

.event-detail {
   font-size: 26rpx;
   color: var(--text-color-gray);
   margin-bottom: 8rpx;
}

.event-organizer {
   margin-right: 20rpx;
}

.event-status {
   display: inline-block;
   font-size: 24rpx;
   padding: 4rpx 12rpx;
   border-radius: 4rpx;
}

.status-upcoming {
   color: #faad14;
   background: rgba(250, 173, 20, 0.1);
}

.status-registering {
   color: #07c160;
   background: rgba(7, 193, 96, 0.1);
}

.status-ongoing {
   color: #1890ff;
   background: rgba(24, 144, 255, 0.1);
}

.status-finished {
   color: #999999;
   background: rgba(153, 153, 153, 0.1);
}

.container {
   min-height: 100vh;
   background: #f5f5f5;
}

/* 顶部个人信息 */
.profile-header {
   background: #fff;
   padding: 30rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
}

.profile-info {
   display: flex;
   align-items: center;
}

.avatar {
   width: 120rpx;
   height: 120rpx;
   border-radius: 60rpx;
   margin-right: 30rpx;
}

.info-right {
   flex: 1;
}

.name {
   font-size: 36rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 10rpx;
}

.level {
   display: inline-block;
   font-size: 24rpx;
   color: #67c23a;
   background: #f0f9eb;
   padding: 4rpx 12rpx;
   border-radius: 4rpx;
}

.follow-section {
   text-align: right;
}

.btn-follow {
   width: 160rpx;
   height: 60rpx;
   line-height: 60rpx;
   font-size: 28rpx;
   margin: 0;
   padding: 0;
   background: #07c160;
   color: #fff;
   margin-bottom: 10rpx;
}

.btn-follow.followed {
   background: #f5f5f5;
   color: #666;
}

.followers {
   font-size: 24rpx;
   color: #999;
}

/* 标签页 */
.tabs {
   display: flex;
   background: #fff;
   margin-top: 20rpx;
}

.tab {
   flex: 1;
   text-align: center;
   padding: 30rpx 0;
   font-size: 28rpx;
   color: #666;
   position: relative;
}

.tab.active {
   color: #07c160;
   font-weight: 500;
}

.tab.active::after {
   content: "";
   position: absolute;
   bottom: 0;
   left: 50%;
   transform: translateX(-50%);
   width: 40rpx;
   height: 4rpx;
   background: #07c160;
   border-radius: 2rpx;
}

/* 战绩汇总 */
.stats-section {
   background: #fff;
   padding: 30rpx;
   display: flex;
   margin-top: 20rpx;
}

.stat-item {
   flex: 1;
   text-align: center;
}

.stat-item .number {
   display: block;
   font-size: 36rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 10rpx;
}

.stat-item .label {
   font-size: 24rpx;
   color: #999;
}

/* 对手胜率图表 */
.chart-section {
   background: #fff;
   padding: 30rpx;
   margin-top: 20rpx;
}

.section-title {
   font-size: 28rpx;
   font-weight: 500;
   color: #333;
   margin-bottom: 30rpx;
}

.opponent-chart {
   display: flex;
   justify-content: space-around;
   align-items: flex-end;
   height: 300rpx;
   padding: 0 30rpx;
}

.chart-item {
   display: flex;
   flex-direction: column;
   align-items: center;
}

.opponent-avatar {
   width: 60rpx;
   height: 60rpx;
   border-radius: 30rpx;
   margin-bottom: 20rpx;
}

.chart-bar-container {
   width: 40rpx;
   height: 200rpx;
   position: relative;
}

.chart-bar {
   position: absolute;
   width: 100%;
   background: #67c23a;
   border-radius: 4rpx;
   transition: height 0.3s;
}

.chart-bar.high {
   background: #f56c6c;
   bottom: 50%;
}

.chart-bar.low {
   background: #67c23a;
   top: 50%;
}

.baseline {
   position: absolute;
   top: 50%;
   left: -20rpx;
   right: -20rpx;
   height: 2rpx;
   background: #ddd;
}

/* 近期赛程 */
.upcoming-section {
   background: #fff;
   padding: 30rpx;
   margin-top: 20rpx;
}

.upcoming-list {
   background: #f9f9f9;
   border-radius: 8rpx;
   padding: 20rpx;
}

.upcoming-item {
   margin-bottom: 30rpx;
}

.upcoming-item:last-child {
   margin-bottom: 0;
}

.match-header {
   display: flex;
   justify-content: space-between;
   margin-bottom: 20rpx;
}

.match-info {
   display: flex;
   align-items: center;
}

.match-round {
   font-size: 24rpx;
   color: #07c160;
   background: rgba(7, 193, 96, 0.1);
   padding: 4rpx 12rpx;
   border-radius: 4rpx;
   margin-right: 16rpx;
}

.match-name {
   font-size: 28rpx;
   color: #333;
}

.match-date {
   font-size: 24rpx;

<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info" bindtap="goToEditProfile">
    <image class="avatar" src="{{userInfo.avatar || '/assets/images/default-avatar.png'}}" mode="aspectFill" />
    <view class="info-right">
      <view class="nickname">{{userInfo.nickname || '激情燃烧的岁月'}}</view>
      <view class="edit-profile">
        <text>修改资料</text>
        <text class="icon">✏️</text>
      </view>
    </view>
  </view>

  <!-- 数据统计 -->
  <view class="stats">
    <view class="stat-item">
      <text class="number">{{stats.registered || 9}}</text>
      <text class="label">已报名</text>
    </view>
    <view class="stat-item">
      <text class="number">{{stats.inGame || 2}}</text>
      <text class="label">比赛中</text>
    </view>
    <view class="stat-item">
      <text class="number">{{stats.awarded || 1}}</text>
      <text class="label">已获奖</text>
    </view>
    <view class="stat-item">
      <text class="number">¥{{stats.totalPrize || 120}}</text>
      <text class="label">获得奖品</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-list">
    <view class="menu-group">
      <view class="menu-item" bindtap="onFunctionTap" data-type="collection">
        <view class="menu-item-content">
          <text>我的关注</text>
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="onFunctionTap" data-type="competition">
        <view class="menu-item-content">
          <text>参赛记录</text>
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="onFunctionTap" data-type="awards">
        <view class="menu-item-content">
          <text>获奖记录</text>
          <text class="arrow">></text>
        </view>
      </view>
      <view class="menu-item" bindtap="onFunctionTap" data-type="referee">
        <view class="menu-item-content">
          <text>执裁记录</text>
          <text class="arrow">></text>
        </view>
      </view>
    </view>
  </view>
</view> 
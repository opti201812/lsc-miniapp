.profile-container {
   min-height: 100vh;
   background-color: #f5f5f5;
   padding: 20rpx;
}

.loading {
   text-align: center;
   padding: 40rpx;
   color: #999;
}

.login-section {
   text-align: center;
   padding: 40rpx;
   background: #fff;
   border-radius: 12rpx;
   margin: 20rpx 0;
}

.tips {
   color: #666;
   font-size: 28rpx;
   margin-bottom: 20rpx;
}

.login-btn {
   width: 80%;
   margin-top: 20rpx;
   background-color: #07c160;
   color: #fff;
}

.user-info {
   padding: 20rpx 0;
}

.user-header {
   background: #fff;
   padding: 30rpx;
   border-radius: 12rpx;
   display: flex;
   align-items: center;
}

.avatar {
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
   margin-right: 30rpx;
}

.user-detail {
   flex: 1;
}

.name {
   font-size: 32rpx;
   font-weight: bold;
   margin-bottom: 10rpx;
   display: block;
}

.level {
   font-size: 24rpx;
   color: #07c160;
   background: rgba(7, 193, 96, 0.1);
   padding: 4rpx 12rpx;
   border-radius: 20rpx;
}

.stats-section {
   display: flex;
   justify-content: space-around;
   background: #fff;
   padding: 30rpx;
   margin-top: 20rpx;
   border-radius: 12rpx;
}

.stat-item {
   text-align: center;
}

.number {
   font-size: 36rpx;
   font-weight: bold;
   color: #333;
   display: block;
}

.label {
   font-size: 24rpx;
   color: #666;
   margin-top: 10rpx;
}

.menu-section {
   background: #fff;
   border-radius: 12rpx;
   margin-top: 20rpx;
}

.menu-item {
   display: flex;
   align-items: center;
   padding: 30rpx;
   border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
   border-bottom: none;
}

.icon {
   width: 40rpx;
   height: 40rpx;
   margin-right: 20rpx;
}

.arrow {
   width: 32rpx;
   height: 32rpx;
   margin-left: auto;
}

.logout-btn {
   width: 80%;
   margin-top: 60rpx;
   background-color: #f5f5f5;
   color: #666;
}

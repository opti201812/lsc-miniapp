.container {
   background: #f5f5f5;
   min-height: 100vh;
}

/* 用户信息区域 */
.user-info {
   background: #fff;
   padding: 20rpx 30rpx;
   display: flex;
   align-items: center;
}

.avatar {
   width: 120rpx;
   height: 120rpx;
   border-radius: 60rpx;
   margin-right: 30rpx;
}

.info-right {
   flex: 1;
}

.nickname {
   font-size: 34rpx;
   font-weight: 500;
   margin-bottom: 10rpx;
}

.edit-profile {
   font-size: 28rpx;
   color: #666;
   display: flex;
   align-items: center;
}

.edit-profile .icon {
   margin-left: 10rpx;
}

/* 数据统计 */
.stats {
   background: #fff;
   display: flex;
   padding: 30rpx 0;
   margin-bottom: 20rpx;
}

.stat-item {
   flex: 1;
   text-align: center;
   border-right: 1px solid #eee;
}

.stat-item:last-child {
   border-right: none;
}

.stat-item .number {
   display: block;
   font-size: 36rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 10rpx;
}

.stat-item .label {
   font-size: 24rpx;
   color: #666;
}

/* 功能列表 */
.function-list {
   background: #fff;
}

.menu-list {
   background: #fff;
}

.menu-group {
   margin-bottom: 20rpx;
}

.menu-item {
   padding: 0 30rpx;
}

.menu-item-content {
   display: flex;
   justify-content: space-between;
   align-items: center;
   padding: 30rpx 0;
   border-bottom: 1rpx solid #f5f5f5;
   font-size: 32rpx;
   color: #333;
}

.menu-item:last-child .menu-item-content {
   border-bottom: none;
}

.arrow {
   color: #999;
   font-size: 32rpx;
}

.login-btn {
   width: 90%;
   height: 88rpx;
   line-height: 88rpx;
   border-radius: 44rpx;
   margin: 60rpx auto;
   font-size: 32rpx;
   background: #07c160;
   color: #fff;
}

.container {
   min-height: 100vh;
   background: #f5f5f5;
   padding: 20rpx;
}

/* 标题区域 */
.header {
   background: #fff;
   padding: 30rpx;
   margin-bottom: 20rpx;
   border-radius: 12rpx;
}

.title {
   font-size: 36rpx;
   font-weight: bold;
   color: #333;
   margin-bottom: 10rpx;
}

.total {
   font-size: 28rpx;
   color: #666;
}

/* 选手列表 */
.player-list {
   background: #fff;
   border-radius: 12rpx;
   padding: 20rpx;
}

.player-item {
   margin-bottom: 30rpx;
   border-bottom: 1rpx solid #eee;
   padding-bottom: 20rpx;
}

.player-item:last-child {
   margin-bottom: 0;
   border-bottom: none;
}

.player-info {
   display: flex;
   align-items: center;
}

.player-number {
   width: 40rpx;
   font-size: 28rpx;
   color: #999;
   text-align: center;
}

.player-avatar {
   width: 80rpx;
   height: 80rpx;
   border-radius: 40rpx;
   margin: 0 20rpx;
}

.player-detail {
   flex: 1;
}

.player-name {
   font-size: 32rpx;
   font-weight: 500;
   color: #333;
   margin-bottom: 8rpx;
}

.player-meta {
   font-size: 24rpx;
   color: #999;
}

.player-level {
   background: #f0f9eb;
   color: #67c23a;
   padding: 4rpx 12rpx;
   border-radius: 4rpx;
   margin-right: 20rpx;
}

.register-time {
   color: #999;
}

.user-container {
   padding: 20rpx;
}

.loading {
   text-align: center;
   padding: 40rpx;
   color: #999;
}

.login-section {
   text-align: center;
   padding: 40rpx;
}

.tips {
   color: #666;
   font-size: 28rpx;
   margin-bottom: 20rpx;
}

.login-btn {
   width: 80%;
   margin-top: 20rpx;
   background-color: #07c160;
   color: #fff;
}

.user-info {
   padding: 20rpx;
}

.avatar-section {
   text-align: center;
   padding: 40rpx 0;
}

.avatar {
   width: 160rpx;
   height: 160rpx;
   border-radius: 50%;
   margin-bottom: 20rpx;
}

.name {
   font-size: 32rpx;
   font-weight: bold;
}

.info-section {
   margin-top: 40rpx;
   background-color: #fff;
   border-radius: 12rpx;
   padding: 20rpx;
}

.info-item {
   display: flex;
   justify-content: space-between;
   padding: 20rpx;
   border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
   border-bottom: none;
}

.label {
   color: #666;
   font-size: 28rpx;
}

.value {
   color: #333;
   font-size: 28rpx;
   font-weight: bold;
}

.logout-btn {
   width: 80%;
   margin-top: 60rpx;
   background-color: #f5f5f5;
   color: #666;
}
